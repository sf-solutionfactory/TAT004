                        @Html.ValidationMessageFor(model => model.PAIS_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LEYENDA1, htmlAttributes: new { @class = "control-label col-md-2" })
