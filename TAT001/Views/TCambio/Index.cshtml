@model IEnumerable<TAT001.Entities.TCAMBIO>
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 831;
    ViewBag.carpeta_r = 500;
}
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>
<link href="~/Content/dataTable.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.16/css/dataTables.material.min.css" rel="stylesheet" />
<div class="row">
    <div class="col s12 right-align">
        @* Texto, pagina a ligar "NOMBRE", View *@
        @Html.ActionLink("Crear Nuevo", "Create", "TCambio", null, new { @class = "btn-small" })
        @using (Html.BeginForm("Descargar", "TCambio", FormMethod.Post, new { @style = "display:initial;" }))
        {
            <button id="btnExport" name="excel" class="btn-small" type="submit" value="Excel"></button>
        }
    </div>
</div>
<div class="col 12 s12 ">
    <div class="card-panel">
        <div class="row">
            <table class="table mdl-data-table striped" id="table" style="width:100%;">
                <thead>
                    <tr class="header">
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.FCURR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TCURR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GDATU)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UKURS)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:left;">
                                @Html.DisplayFor(modelItem => item.FCURR)
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(modelItem => item.TCURR)
                            </td>
                            <td style="text-align:left;">
                                @item.GDATU.Day/@item.GDATU.Month/@item.GDATU.Year
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(modelItem => item.UKURS)
                            </td>
                            <td style="text-align:right;">
                                <a data-form-method="post" href="@Url.Action("Edit", "TCambio", new { fcur = item.FCURR, tcur = item.TCURR, gd = item.GDATU, uku = item.UKURS })">
                                    <i class='material-icons green-text'>edit</i>
                                </a>
                                <a data-form-method="post" href="@Url.Action("Details", "TCambio", new { fcur = item.FCURR, tcur = item.TCURR, gd = item.GDATU, uku = item.UKURS })">
                                    <i class='material-icons blue-text'>search</i>
                                </a>
                                <a href="@Url.Action("Delete", "Delete")">
                                    <i class='material-icons red-text'>delete</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <script>
                $(document).ready(function () {
                    var table = $('#table').DataTable({
                        //paging: false,
                        //searching: false
                        //stateSave: true,
                        scrollX: "50vh",
                        scrollY: "50vh",
                        scrollCollapse: true,
                        //language: {
                        //    lengthMenu: "Display _MENU_ records per page",
                        //    zeroRecords: "No se encontraron datos",
                        //    info: "Página _PAGE_ de _PAGES_",
                        //    infoEmpty: "No hay datos",
                        //    infoFiltered: "(Filtrado de _MAX_ líneas totales)",
                        //    search: "Buscar"
                        //},
                        order: [[3, "desc"], [0, "desc"]],
                        language: {
                            "url": "../Scripts/lang/@Session["spras"].ToString()"+".json"
                        },
                        columnDefs: [
                            {
                                targets: [1, 2, 3, 4, 5],
                                className: 'mdl-data-table__cell--non-numeric'
                            }
                        ],
                        initComplete: function () {
                            this.api().columns().every(function () {
                                var column = this;
                                //var div = $('<div class="inputa-field col s12">').appendTo($(column.footer()).empty());
                                var select = $('<select style="display:initial;" class="browser-default"><option value=""></option></select>')
                                    //var select = $('<select ><option value=""></option></select>')
                                    //.appendTo($(div))
                                    .appendTo($(column.footer()).empty())
                                    .on('change', function () {
                                        var val = $.fn.dataTable.util.escapeRegex(
                                            $(this).val()
                                        )
                                            ;

                                        column
                                            .search(val ? '^' + val + '$' : '', true, false)
                                            .draw();
                                    });

                                //column.data().unique().sort().each(function (d, j) {
                                column.cells('', column[0]).render('display').sort().unique().each(function (d, j) {
                                    //select.append('<option value="' + d + '">' + d + '</option>')
                                    var val = $('<div/>').html(d).text();
                                    select.append('<option value="' + val + '">' + val + '</option>');
                                });
                                //var scr = div.append('<script>var elem = document.querySelectorAll("select");var instance = M.Select.init(elem, []);');
                            });
                        }
                    });

                    var a = $('#selecc').val();
                    table.page.len(a).draw();
                    $('#selecc').on('change', function () {
                        table.page.len(this.value).draw();
                    });

                    $('input.global_filter').on('keyup click', function () {
                        filterGlobal();
                    });
                });

                function filterGlobal() {
                    $('#table').DataTable().search(
                        $('#global_filter').val()).draw();
                }
            </script>
        </div>
    </div>
</div>

