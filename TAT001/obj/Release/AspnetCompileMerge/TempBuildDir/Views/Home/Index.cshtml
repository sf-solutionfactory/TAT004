    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.TSOL_ID.Equals("PR"))
                {
                    <td class=" details-control" style="cursor:pointer">
                        <i class="material-icons">add</i>
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td onclick="document.location='@Url.Action("Details", "Solicitudes", new { id = item.NUM_DOC })'" style="cursor:pointer">
                    @item.NUM_DOC
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOCIEDAD_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PAIS_ID)
                </td>
                <td>
                    @item.FECHAD.Value.Year/@item.FECHAD.Value.Month/@item.FECHAD.Value.Day
                </td>
                <td>
                    @item.HORAC.Value.ToString().Split('.')[0]
                </td>
                <td>
                    @item.FECHAC.Value.Month
                </td>
                @if (item.ESTATUS_WF.Equals("P"))
                {
                    <td class="yellow darken-2 white-text">
                        <div class="lbl_pending">Pendiente</div>
                    </td>
                }
                else if (item.ESTATUS_WF.Equals("A"))
                {
                    if (item.ESTATUS.Equals("C"))
                    {
                        <td class="green darken-1 white-text">
                            <div class="lbl_contab">Por contabilizar</div>
                        </td>
                    }
                    else if (item.ESTATUS.Equals("P"))
                    {
                        <td class="green darken-1 white-text">
                            <div class="lbl_contab">Contabilizar SAP</div>
                        </td>
                    }
                    else
                    {
                        <td class="green darken-1 white-text">
                            <div class="lbl_approved">Aprobada</div>
                        </td>
                    }
                }
                else if (item.ESTATUS_WF.Equals("R"))
                {
                    <td class="red darken-1 white-text">
                        <div class="lbl_rejected">Rechazada</div>
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.PAYER_ID)
                </td>
                <td>
                    @for (int i = 0; i < lst.Count; i++)
                    {
                        if (lst[i].KUNNR == item.PAYER_ID)
                        {
                            @Html.Label(lst[i].NAME1)
                        }
                    }
                </td>
                <td>
                    @for (int i = 0; i < lst.Count; i++)
                    {
                        if (lst[i].KUNNR == item.PAYER_ID)
                        {
                            @Html.Label(lst[i].CANAL)
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TSOL.TSOLTs.Where(a => a.SPRAS_ID.Equals("ES")).FirstOrDefault().TXT020)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TALL.TALLTs.Where(a => a.SPRAS_ID.Equals("ES")).FirstOrDefault().TXT50)
                </td>
                <td>
                    @for (int i = 0; i < lstC.Count; i++)
                    {
                        if (lstC[i].SOCIEDAD_ID == item.SOCIEDAD_ID && lstC[i].GALL_ID == item.TALL.GALL_ID)
                        {
                            @Html.Label(lstC[i].CARGO.ToString())
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CONCEPTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MONTO_DOC_ML)
                </td>
                <td>
                    @for (int i = 0; i < lstD.Count; i++)
                    {
                        if (lstD[i].NUM_DOC == item.NUM_DOC)
                        {
                            @Html.Label(lstD[i].FACTURA)
                        }
                    }
                </td>
                <td>
                    @for (int i = 0; i < lstD.Count; i++)
                    {
                        if (lstD[i].NUM_DOC == item.NUM_DOC)
                        {
                            @Html.Label(lstD[i].FACTURAK)
                        }
                    }
                </td>
                <td>
                    @item.USUARIOC_ID
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
