@model IEnumerable<TAT001.Entities.DOCUMENTO>

@{
    //ViewBag.Title = "Páginas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.pagina_r = 201;
    ViewBag.carpeta_r = 200;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row" style="margin-bottom:0;">
    <div class="input-field col s3 m3 l3">
        <select id="selecc">
            <option value="10" selected>10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
        <label id="lbl_length">Ver por página</label>
    </div>
    <div class="input-field col s3 m3 l3 offset-l6 offset-m6">
        <input type="text" class="global_filter" id="global_filter">
        <label for="global_filter" id="lbl_search">Buscar</label>
    </div>
</div>
<script>
    var elem = document.querySelector('select');
    var options = [];
    var instance = M.Select.init(elem, options);
</script>
<script src="//code.jquery.com/jquery-1.12.4.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>
@*<link href="//cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css" rel="stylesheet" />*@
<link href="~/Content/dataTable.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.16/css/dataTables.material.min.css" rel="stylesheet" />
<table class="table mdl-data-table striped" id="table" style="width:100%;">
    <thead>
        <tr>
            <th id="lbl_num">
                @Html.DisplayNameFor(model => model.NUM_DOC)
            </th>
            <th id="lbl_tsol">
                @Html.DisplayNameFor(model => model.TSOL)
            </th>
            <th id="lbl_tall">
                @Html.DisplayNameFor(model => model.TALL)
            </th>
            <th id="lbl_fechad">
                @Html.DisplayNameFor(model => model.FECHAD)
            </th>
            <th id="lbl_estatus">
                @Html.DisplayNameFor(model => model.ESTATUS)
            </th>
            <th id="lbl_concepto">
                @Html.DisplayNameFor(model => model.CONCEPTO)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="document.location = '@Url.Action("Details", new { id = item.NUM_DOC })'" style="cursor:pointer">
                <td>
                    @Html.DisplayFor(modelItem => item.NUM_DOC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TSOL.TSOLTs.Where(a => a.SPRAS_ID.Equals("ES")).FirstOrDefault().TXT020)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TALL.TALLTs.Where(a => a.SPRAS_ID.Equals("ES")).FirstOrDefault().TXT50)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTATUS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CONCEPTO)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.NUM_DOC }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NUM_DOC })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        var table = $('#table').DataTable({
            //paging: false,
            //searching: false
            //stateSave: true,
            //scrollX: "50vh",
            //scrollCollapse: true,
            //language: {
            //    lengthMenu: "Display _MENU_ records per page",
            //    zeroRecords: "No se encontraron datos",
            //    info: "Página _PAGE_ de _PAGES_",
            //    infoEmpty: "No hay datos",
            //    infoFiltered: "(Filtrado de _MAX_ líneas totales)",
            //    search: "Buscar"
            //},
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            columnDefs: [
                {
                    targets: [0, 1, 2, 3, 4, 5],
                    className: 'mdl-data-table__cell--non-numeric'
                }
            ]
        });

        var a = $('#selecc').val();
        table.page.len(a).draw();
        $('#selecc').on('change', function () {
            table.page.len(this.value).draw();
        });

        $('input.global_filter').on('keyup click', function () {
            filterGlobal();
        });
    });

    function filterGlobal() {
        $('#table').DataTable().search(
            $('#global_filter').val()).draw();
    }
</script>
<style>
    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }

    .dataTables_scrollHeadInner, .mdl-data-table {
        width: 100%;
    }
</style>